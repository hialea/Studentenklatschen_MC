<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hs_hannover.fholz.studentenklatschen.Shop.ItemGenerator">

    <Button
        android:id="@+id/randomize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="195dp"
        android:text="Button" />

    <TextView
        android:id="@+id/strength_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/defense_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/strength_view"
        android:layout_marginTop="26dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/special_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/defense_view"
        android:layout_below="@+id/defense_view"
        android:layout_marginTop="32dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/slot_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/special_view"
        android:layout_below="@+id/special_view"
        android:layout_marginTop="28dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/slot_view"
        android:layout_below="@+id/slot_view"
        android:layout_marginTop="26dp"
        android:text="TextView" />
</RelativeLayout>
