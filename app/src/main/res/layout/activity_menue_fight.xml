<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hs_hannover.fholz.studentenklatschen.MainMenu.MenueFight">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_kampf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="511dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/bottom_navigation_main" />

    <Button
        android:id="@+id/search_other_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Other Player"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="117dp" />

    <Button
        android:id="@+id/gererate_enemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Enemy"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="248dp" />

</android.support.constraint.ConstraintLayout>
