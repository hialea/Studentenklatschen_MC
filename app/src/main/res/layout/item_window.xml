<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="NAME" />

    <TextView
        android:id="@+id/strength_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/defense_text"
        android:layout_alignEnd="@+id/defense_text"
        android:layout_marginBottom="30dp"
        android:text="StÃ¤rke" />

    <TextView
        android:id="@+id/defense_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="Verteidigung" />

    <TextView
        android:id="@+id/special_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/defense_text"
        android:layout_below="@+id/defense_text"
        android:layout_marginTop="10dp"
        android:text="Spezial" />

    <TextView
        android:id="@+id/special_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/special_text"
        android:layout_alignBottom="@+id/special_text"
        android:layout_alignEnd="@+id/item_name"
        android:text="00" />

    <TextView
        android:id="@+id/defense_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/defense_text"
        android:layout_alignBottom="@+id/defense_text"
        android:layout_alignEnd="@+id/item_name"
        android:text="00" />

    <TextView
        android:id="@+id/strength_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/strength_text"
        android:layout_alignBottom="@+id/strength_text"
        android:layout_alignStart="@+id/defense_stat"
        android:text="00" />

    <TextView
        android:id="@+id/special_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/special_stat"
        android:layout_alignBottom="@+id/special_stat"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/special_stat"
        android:text="00" />

    <TextView
        android:id="@+id/defense_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/defense_stat"
        android:layout_alignBottom="@+id/defense_stat"
        android:layout_alignStart="@+id/special_add"
        android:text="00" />

    <TextView
        android:id="@+id/strength_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/strength_stat"
        android:layout_alignBottom="@+id/strength_stat"
        android:layout_alignStart="@+id/defense_add"
        android:text="00" />
</RelativeLayout>